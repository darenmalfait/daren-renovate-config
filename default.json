{
  "extends": ["local>darenmalfait/daren-renovate-config:shared"],
  "packageRules": [
    {
      "groupName": "styling and css packages",
      "groupSlug": "styling",
      "matchPackagePatterns": [
        "tailwind*",
        "sass*",
        "styled-components*",
        "emotion*",
        "stylex*"
      ],
      "labels": ["styling"]
    },
    {
      "groupName": "all lint-related packages",
      "matchPackagePatterns": [
        "eslint*",
        "lint-staged",
        "prettier*",
        "remark-lint*",
        "standard*",
        "stylelint*",
        "tailwindcss/classnames-order"
      ],
      "labels": ["linting"]
    },
    {
      "groupName": "all nerdfish packages",
      "matchPackagePatterns": ["@nerdfish/*"]
    }
  ]
}
