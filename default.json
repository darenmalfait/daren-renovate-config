{
  "extends": ["local>darenmalfait/daren-renovate-config:shared"],
  "packageRules": [
    {
      "groupName": "all uncategorized dependencies",
      "groupSlug": "all",
      "matchPackagePatterns": ["*"]
    },
    {
      "groupName": "all lint-related packages",
      "matchPackagePatterns": [
        "eslint*",
        "lint-staged",
        "prettier*",
        "remark-lint*",
        "standard*",
        "stylelint*"
      ]
    },
  ]
}
